{
  "extends": "airbnb",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "func-names": "off",
    "no-undef": "off",
    "comma-dangle": "off",
    "no-console": "off",
    "max-len": "off",
    "no-useless-escape": "off",
    "react/prefer-stateless-function": "off",
    "no-param-reassign": "off",
    "no-loop-func": "off",
    "jsx-quotes": ["error", "prefer-single"]
    }],
    "strict": [2, "global"]
  },
  "plugins": [
    "react"
  ]
}
